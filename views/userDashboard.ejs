<%- include('./partials/header.ejs', {afterLogin: true}) %>
<a href="/logout">Logout</a>
<h2>Hello, <%= username  %></h2>
<h3>Transaction History</h3>
<div>
    <div style="float: right; margin: 10px;">
        <form action="#" method="get" class="form-inline my-2 my-lg-0">
            <input class="form-control mr-sm-2" type="search" name="search" placeholder="Search by trip" aria-label="Search">
            <button class="btn btn-outline-success my-2 my-sm-0" type="submit">üîçSearch</button>
        </form>
    </div>

    <table class="table table-hover">
        <thead class="thead-light" style="text-align: center;">
            <tr>
                <th>Trip</th>
                <th>Price</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            <% if(data.length > 0){ %>
                <% data.forEach((elem)=>{ %>
                    <tr>
                        <td><%= data.Trip.name %></td>
                        <td><%= data.Trip.price %></td>
                        <td style="text-align: center;"> 
                            <a class="btn btn-outline-danger" style="margin-right: 10px;" href="/directors/delete/<%= elem.id %>" onclick="return confirm('Are you sure want to delete this director?')">
                                üóëDelete
                            </a>
                        </td>
                    </tr>
                <% }) %>
            <% } else{ %>
                <tr>
                    <td colspan="5" style="text-align: center;"> No Transaction on this list.</td>
                </tr> 
            <% } %>
            
        </tbody>
    </table>
</div>
<%- include('./partials/footer.ejs') %>