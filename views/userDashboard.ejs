<%- include('./partials/header.ejs', {afterLogin: true}) %>
<a href="/logout">Logout</a>
<h2>Hello, <%= username  %></h2>
<h3>Transaction History</h3>
<div>
    <table class="table table-hover">
        <thead class="thead-light" style="text-align: center;">
            <tr>
                <th>Trip</th>
                <th>Price</th>
                <th>Status</th>
            </tr>
        </thead>
        <tbody>
            <% if(data.length > 0){ %>
                <% data.forEach((elem)=>{ %>
                    <tr style="text-align: center;">
                        <td><%= elem.Trip.name %></td>
                        <td><%= helper(elem.Trip.price) %></td>
                        <td><%= elem.status%></td>
                    </tr>
                <% }) %>
            <% } else{ %>
                <tr>
                    <td colspan="5" style="text-align: center;"> No Transaction on this list.</td>
                </tr> 
            <% } %>
            
        </tbody>
    </table>
</div>
<%- include('./partials/footer.ejs') %>